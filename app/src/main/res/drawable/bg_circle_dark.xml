<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- The inner fill color of the circle -->
    <!-- Using a semi-transparent dark blue/black to blend with the cards -->
    <solid android:color="#CC0F111A" />
    
    <!-- Optional: Subtle border to make the button stand out against photos -->
    <stroke
        android:width="1dp"
        android:color="@color/divider_color" />

    <!-- Padding for the icon inside the circle -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
        
</shape>